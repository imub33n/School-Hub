<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/message_actions"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:elevation="4dp"
    android:padding="8dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/initial_reactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </HorizontalScrollView>
    <RelativeLayout
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:paddingRight="16dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:paddingLeft="12dp"
        android:id="@+id/message_privately_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.cometchat.pro.uikit.ui_components.shared.cometchatAvatar.CometChatAvatar
            android:layout_width="32dp"
            android:layout_centerVertical="true"
            android:id="@+id/sender_avatar"
            tools:src="@tools:sample/avatars"
            android:layout_height="32dp"/>
        <TextView
            android:layout_toRightOf="@+id/sender_avatar"
            android:id="@+id/sender_name"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:textStyle="bold"
            android:text="Send Message Privately"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/translate_message"
        android:drawableStart="@drawable/ic_translate"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="@string/translate_message"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
     <TextView
        android:id="@+id/message_info"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_info_image"
        android:textStyle="bold"
        android:text="@string/message_information"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/start_thread"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="@string/start_thread"
        android:drawableStart="@drawable/ic_thread_24dp"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/reply_message"
        android:clickable="true"
        android:drawableStart="@drawable/ic_reply"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:foreground="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="@string/reply_message"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/forward_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_forward"
        android:textStyle="bold"
        android:text="@string/forward_message"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/copy_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="@string/copy_message"
        android:drawableStart="@drawable/ic_content_copy_black_24dp"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/share_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_share_24dp"
        android:textStyle="bold"
        android:text="@string/share_message"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/edit_message"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="@string/edit_message"
        android:drawableStart="@drawable/ic_baseline_edit_24"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/delete_message"
        android:drawableStart="@drawable/ic_delete_24dp"
        android:drawableTint="@color/red"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:textColor="@color/red"
        android:foreground="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="@string/delete_message"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/retry_message"
        android:drawableStart="@drawable/ic_baseline_retry_24"
        android:drawableTint="@color/red"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:textColor="@color/red"
        android:foreground="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:text="@string/retry"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>

